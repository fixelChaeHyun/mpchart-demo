<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyTrans"
    android:padding="20dp"
    tools:context=".LockTestActivity">

    <Button
        android:id="@+id/btn_lock"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Lock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btn_unlock"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Unlock"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_lock" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:padding="8dp"
        android:text="result"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_lock" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_result2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:padding="8dp"
        android:text="result2"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/tv_result"
        app:layout_constraintTop_toBottomOf="@id/btn_lock" />

</androidx.constraintlayout.widget.ConstraintLayout>