<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_first"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="1번"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_second"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="2번"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_first" />

    <Button
        android:id="@+id/btn_third"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="3번"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_second" />

    <Button
        android:id="@+id/btn_fourth"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="4번"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_third" />

    <Button
        android:id="@+id/btn_fifth"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="5번"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_fourth" />

    <Button
        android:id="@+id/btn_sixth"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="6번"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_fifth" />

    <Button
        android:id="@+id/btn_seventh"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="7번"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_sixth" />
    <Button
        android:id="@+id/btn_eighth"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="8번"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_seventh" />

    <Button
        android:id="@+id/btn_circle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="9번"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_eighth" />


</androidx.constraintlayout.widget.ConstraintLayout>